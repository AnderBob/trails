<h2>Register</h2>

<%= error_messages_for :user %>
<div class="box">
  <% form_for :user, :url => users_path, :html => {:class => "tabular"} do |f| -%>
    <p><label for="user_login">Login<span class="required"> *</span></label><%= f.text_field :login %></p>
    <p><label for="user_email">Email</label><%= f.text_field :email %></p>
    <p><label for="user_password">Password</label><%= f.password_field :password %></p>
    <p><label for="user_password_confirmation">Confirm Password</label><%= f.password_field :password_confirmation %></p>
    <%= submit_tag 'Sign up' %>
  <%- end %>
</div>
